<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Alert?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Controller.FormationController" alignment="CENTER" spacing="20" stylesheets="@stylef.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Titre de la page -->
    <Label text="Gestion des Formations" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Liste des formations -->
    <ListView fx:id="listFormations" prefHeight="200" prefWidth="300" />

    <!-- Formulaire pour ajouter/modifier une formation -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Nom:" />
        <TextField fx:id="txtName" promptText="Nom de la formation" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Description:" />
        <TextField fx:id="txtDescription" promptText="Description de la formation" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Prix:" />
        <TextField fx:id="txtPrix" promptText="Prix de la formation" />
    </HBox>

    <!-- Boutons pour gÃ©rer les formations -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter" onAction="#ajouterFormation" />
        <Button text="Modifier" onAction="#modifierFormation" />
        <Button text="Supprimer" onAction="#supprimerFormation" />
    </HBox>
</VBox>
