<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CertificatController">
    <children>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Gestion des Certificats" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <HBox spacing="10">
                <Label text="ID Formation:" />
                <ComboBox fx:id="cmbIdFormation" promptText="Sélectionner une formation" />
            </HBox>

            <HBox spacing="10">
                <Label text="Date Examen:" />
                <DatePicker fx:id="dateExamen" />
            </HBox>

            <HBox spacing="10">
                <Label text="Heure:" />
                <ComboBox fx:id="cmbHeure" promptText="Sélectionner une heure" />
            </HBox>

            <HBox spacing="10">
                <Label text="Durée (min):" />
                <Spinner fx:id="spnDuree" />
            </HBox>

            <HBox spacing="10">
                <Label text="Prix Examen:" />
                <TextField fx:id="txtPrixExam" promptText="Saisir le prix en DT" />
            </HBox>

            <HBox spacing="10">
                <Label text="Niveau:" />
                <ComboBox fx:id="cmbNiveau" promptText="Sélectionner un niveau" />
            </HBox>

            <HBox spacing="10">
                <Button fx:id="btnAjouter" text="Ajouter" onAction="#ajouterCertificat" />
                <Button fx:id="btnModifier" text="Modifier" onAction="#modifierCertificat" />
                <Button fx:id="btnSupprimer" text="Supprimer" onAction="#supprimerCertificat" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
