                                </a>
                                <a href="{{ path('app_entretien_edit', {'id': entretien.id}) }}"
                                   class="btn-custom btn-outline-primary"
                                   data-bs-toggle="tooltip"
                                   title="Edit">
                                    <i class="fas fa-edit icon"></i> Edit
                                </a>
                                {{ include('entretien/_delete_form.html.twig', {
                                    'button_attrs': {
                                        'class': 'btn-custom btn-danger',
                                        'data-bs-toggle': 'tooltip',
                                        'title': 'Delete'
                                    },
                                    'button_label': '
                                        <i class="fas fa-trash-alt icon"></i> Delete
                                    '
                                }) }}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Google Maps Card -->
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">
                                <i class="fas fa-map icon"></i> Interview Location
                            </h2>
                            <p class="card-subtitle">Google Maps integration for location</p>
                        </div>
                        <div class="card-body p-0">
                            <div id="map" class="map-container"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

