{% extends 'base.html.twig' %}

{% block title %}Recruitment Details{% endblock %}




{% block body %}
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --accent-color: #6c63ff;
            --shadow-sm: 0 4px 6px rgba(0, 0, 0, 0.05);
            --shadow-md: 0 10px 15px rgba(0, 0, 0, 0.1);
        }

        .detail-card {
            border: none;
            border-radius: 16px;
            box-shadow: var(--shadow-md);
            overflow: hidden;
        }

        .detail-card-header {
            background: var(--primary-gradient);
            color: white;
            padding: 1.5rem;
            position: relative;
        }

        .detail-card-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0) 70%);
            transform: rotate(30deg);
        }

        .detail-title {
            font-weight: 700;
            position: relative;
            z-index: 1;
        }

        .detail-subtitle {
            opacity: 0.9;
            font-size: 0.95rem;
            position: relative;
            z-index: 1;
        }

        .btn-back {
            background: rgba(255,255,255,0.15);
            border: none;
            border-radius: 50px;
            padding: 0.5rem 1.25rem;
            color: white;
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative;
            z-index: 1;
            display: flex;
            align-items: center;
        }

        .btn-back:hover {
            background: rgba(255,255,255,0.25);
            transform: translateX(-3px);
        }

        .detail-item {
            padding: 1.25rem 0;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .detail-item:last-child {
            border-bottom: none;
        }

        .detail-label {
            font-weight: 600;
            color: #4a5568;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .detail-label i {
            width: 20px;
            height: 20px;
            color: var(--accent-color);
        }

        .detail-value {
            font-size: 1.05rem;
        }

        .position-badge {
            background: rgba(108, 99, 255, 0.1);
            color: var(--accent-color);
            font-weight: 600;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            display: inline-block;
        }

        .interview-badge {
            background: rgba(16, 185, 129, 0.1);
            color: #10b981;
            font-weight: 600;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .action-buttons {
            border-top: 1px solid rgba(0,0,0,0.05);
            padding-top: 1.5rem;
        }

        .btn-action {
            border-radius: 50px;
            padding: 0.75rem 1.75rem;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-action i {
            width: 18px;
            height: 18px;
        }

        .btn-edit {
            background: var(--primary-gradient);
            color: white;
            border: none;
            box-shadow: var(--shadow-sm);
        }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .btn-delete {
            background: rgba(239, 68, 68, 0.1);
            color: #ef4444;
            border: none;
        }

        .btn-delete:hover {
            background: rgba(239, 68, 68, 0.2);
        }

        @media (max-width: 768px) {
            .detail-card-header {
                padding: 1.25rem;
            }

            .detail-title {
                font-size: 1.5rem;
            }
        }
    </style>

    <main class="content">
        <div class="container-fluid p-0">
            <div class="detail-card">
                <div class="detail-card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="detail-title mb-2">
                                <i class="align-middle me-2" data-feather="target"></i>
                                Recruitment Campaign
                            </h1>
                            <p class="detail-subtitle mb-0">Detailed view of this recruitment session</p>
                        </div>
                        <a href="{{ path('app_recrutement_index') }}" class="btn-back">
                            <i class="align-middle me-2" data-feather="arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-lg-8 mx-auto">
                            <div class="detail-item">
                                <dt class="detail-label">
                                    <i data-feather="file-text"></i> Position
                                </dt>
                                <dd class="detail-value mt-2">
                                    {% set currentOffre = offres|filter(o => o.id == recrutement.offreId)|first %}
                                    <span class="position-badge">
                                        {{ currentOffre.titre ?? 'Unknown Offer' }}
                                    </span>
                                </dd>
                            </div>

                            <div class="detail-item">
                                <dt class="detail-label">
                                    <i data-feather="calendar"></i> Start Date
                                </dt>
                                <dd class="detail-value mt-2">
                                    {{ recrutement.dateDebut ? recrutement.dateDebut|date('F j, Y') : '-' }}
                                </dd>
                            </div>

                            <div class="detail-item">
                                <dt class="detail-label">
                                    <i data-feather="calendar"></i> End Date
                                </dt>
                                <dd class="detail-value mt-2">
                                    {{ recrutement.dateFin ? recrutement.dateFin|date('F j, Y') : '-' }}
                                </dd>
                            </div>

                            <div class="detail-item">
                                <dt class="detail-label">
                                    <i data-feather="users"></i> Interviews
                                </dt>
                                <dd class="detail-value mt-2">
                                    <span class="interview-badge">
                                        <i data-feather="user-check"></i>
                                        {{ recrutement.NbEntretien }} {{ recrutement.NbEntretien > 1 ? 'interviews' : 'interview' }}
                                    </span>
                                </dd>
                            </div>
                        </div>
                    </div>

                    <div class="action-buttons d-flex justify-content-end gap-3">
                        <a href="{{ path('app_recrutement_edit', {'id': recrutement.id}) }}"
                           class="btn-action btn-edit"
                           data-bs-toggle="tooltip"
                           title="Edit Campaign">
                            <i class="align-middle" data-feather="edit"></i> Edit
                        </a>
                        {{ include('recrutement/_delete_form.html.twig', {
                            'button_attrs': {
                                'class': 'btn-action btn-delete',
                                'data-bs-toggle': 'tooltip',
                                'title': 'Delete Campaign'
                            },
                            'button_label': '
                                <i class="align-middle" data-feather="trash-2"></i>
                                Delete
                            '
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            feather.replace({ 'aria-hidden': 'true' });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.forEach(function (el) {
                new bootstrap.Tooltip(el);
            });

            // Add animation to detail items
            document.querySelectorAll('.detail-item').forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';
                item.style.transition = `all 0.4s ease ${index * 0.1}s`;

                setTimeout(() => {
                    item.style.opacity = '1';
                    item.style.transform = 'translateY(0)';
                }, 100);
            });
        });
    </script>
{% endblock %}