<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Initialize Feather Icons
        feather.replace();

        // Initialize Flatpickr with custom options
        flatpickr(".flatpickr-date", {
            dateFormat: "Y-m-d",
            altInput: true,
            altFormat: "F j, Y",
            allowInput: true,
            defaultDate: null,
            theme: "light" // or "dark" for dark mode
        });

        // Add focus effects to form controls
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentNode.querySelector('label').style.color = '#6c63ff';
            });

            input.addEventListener('blur', function() {
                this.parentNode.querySelector('label').style.color = '#6c757d';
            });
        });

        // Form validation
        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });

        // Add dynamic validation to input fields
        function validateField(input, errorElement, minLength = 1, errorMessage = '') {
            const value = input.value.trim();
            if (value.length < minLength || (input.type === 'number' && Number(value) < 1)) {
                input.classList.add('is-invalid');
                errorElement.style.display = 'block';
                errorElement.textContent = errorMessage;
            } else {
                input.classList.remove('is-invalid');
                errorElement.style.display = 'none';
            }
        }


        // Input field validations on change
        document.getElementById("offre").addEventListener("input", function () {
            validateField(this, document.getElementById("offre-error"), 5, 'Please enter a valid offer title (at least 5 characters).');
        });

        document.getElementById("NbEntretien").addEventListener("input", function () {
            validateField(this, document.getElementById("NbEntretien-error"), 1, 'Please enter a valid number of interviews (must be at least 1).');
        });

        document.getElementById("dateDebut").addEventListener("input", function () {
            validateField(this, document.getElementById("dateDebut-error"), 1, 'Please enter a valid start date.');
        });

        document.getElementById("dateFin").addEventListener("input", function () {
            validateField(this, document.getElementById("dateFin-error"), 1, 'Please enter a valid end date.');
        });

        // Form submit validation
        const form = document.querySelector('.needs-validation');
        form.addEventListener('submit', function(event) {
            let isValid = true;
            // Validate all inputs before submit
            document.querySelectorAll('.form-control').forEach(input => {
                const errorElement = input.parentElement.querySelector('.invalid-feedback');
                validateField(input, errorElement);
                if (input.classList.contains('is-invalid')) {
                    isValid = false;
                }
            });

            if (!isValid) {
                event.preventDefault();
                event.stopPropagation();
            } else {
                form.classList.add('was-validated');
            }
        });
    });
</script>

