{% extends 'base.html.twig' %}

{% block title %}D√©tails de l'Offre{% endblock %}

{% block body %}
    <style>
        .card {
            border-radius: 1rem;
            background: linear-gradient(145deg, #ffffff, #f3f3f3);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease-in-out;
        }

        .card:hover {
            transform: translateY(-3px);
        }

        .card-header {
            background-color: #f8f9fa;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
            font-weight: 600;
            font-size: 1.2rem;
            color: #333;
        }

        dt {
            font-weight: 600;
            color: #495057;
        }

        dd {
            color: #212529;
        }

        .salary-box {
            border-radius: 0.75rem;
            background: #f1f3f5;
            padding: 0.8rem;
            margin-bottom: 0.5rem;
            box-shadow: inset 1px 1px 3px rgba(0,0,0,0.05);
        }

        .badge-salaire {
            font-size: 0.75rem;
            font-weight: 600;
            padding: 0.4em 0.6em;
            border-radius: 0.5rem;
        }

        .high-salary {
            background-color: #d4edda;
            color: #155724;
        }

        .medium-salary {
            background-color: #fff3cd;
            color: #856404;
        }

        .low-salary {
            background-color: #f8d7da;
            color: #721c24;
        }

        .btn-group .btn {
            transition: all 0.3s ease;
            border-radius: 0.4rem;
        }

        .btn-group .btn:hover {
            transform: scale(1.05);
        }

        .btn i {
            margin-right: 4px;
        }

        .back-btn {
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            transform: translateY(-2px);
        }
    </style>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="card shadow-sm">
                    <div class="card-header text-center">
                        üìÑ D√©tails de l'Offre
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">üìù Titre</dt>
                            <dd class="col-sm-8">{{ offre.titre }}</dd>

                            <dt class="col-sm-4">üè¢ D√©partement</dt>
                            <dd class="col-sm-8">{{ offre.departement.nom }}</dd>

                            <dt class="col-sm-4">üìÑ Description</dt>
                            <dd class="col-sm-8">{{ offre.description }}</dd>
                        </dl>

                        <div class="row mt-3">
                            <div class="col-sm-6">
                                <div class="salary-box text-center">
                                    <strong>Salaire Min</strong><br>
                                    {{ offre.salaireMin | number_format(2, ',', ' ') }} TND
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="salary-box text-center">
                                    <strong>Salaire Max</strong><br>
                                    {{ offre.salaireMax | number_format(2, ',', ' ') }} TND
                                    <span class="badge-salaire
                                    {% if offre.salaireMax > 5000 %}
                                        high-salary
                                    {% elseif offre.salaireMax > 2000 %}
                                        medium-salary
                                    {% else %}
                                        low-salary
                                    {% endif %}
                                ">
                                    {% if offre.salaireMax > 5000 %}
                                        üîù Tr√®s bien pay√©
                                    {% elseif offre.salaireMax > 2000 %}
                                        üü† Moyen
                                    {% else %}
                                        üîª Faible
                                    {% endif %}
                                </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <div class="btn-group" role="group" aria-label="Actions">
                            <a href="{{ path('app_offre_edit', {'id': offre.id}) }}" class="btn btn-info btn-sm">
                                <i class="bi bi-pencil-square"></i> Modifier
                            </a>
                            <form action="{{ path('app_offre_delete', {'id': offre.id}) }}" method="post" class="d-inline" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette offre ?');">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.id) }}">
                                    <i class="bi bi-trash3-fill"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <a href="{{ path('app_offre_index') }}" class="btn btn-secondary btn-sm back-btn">
                        ‚¨ÖÔ∏è Retour √† la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
