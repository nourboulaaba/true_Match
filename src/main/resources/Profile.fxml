<AnchorPane prefHeight="1250.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: #F4F4F4;" fx:controller="Controller.profileController">
    <children>
        <!-- Carte du profil -->
        <VBox layoutX="250.0" layoutY="50.0" prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 15; -fx-border-color: #E0E0E0; -fx-border-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);">
            <children>



                    <VBox spacing="10" style="-fx-alignment: center;">
                        <ImageView fx:id="currentUserImage" fitHeight="100" fitWidth="100" />
                        <Label fx:id="currentUserName" text="Nom de l'utilisateur" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                        <Label fx:id="currentUserLastName" text="Nom de l'utilisateur" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                        <Label fx:id="currentUserEmail" text="Email de l'utilisateur" style="-fx-font-size: 16;"/>

                    </VBox>

            </children>
        </VBox>

        <!-- Bouton Modifier mon profil -->
        <Button layoutX="480.0" layoutY="420.0" text="Modifier mon profil" style="-fx-background-color: #699bf7; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 10; -fx-padding: 8 15;" mnemonicParsing="false" fx:id="ModifierUtilisateurButton" onAction="#handleModifier"/>

        <!-- Bouton Retour -->
       
    </children>
