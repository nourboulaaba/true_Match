<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@Static/Style/Styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pifinal.Controller.UpdateOffreController">

    <Label layoutX="14.0" prefHeight="66.0" prefWidth="162.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Modifier l'Offre" textAlignment="CENTER" underline="true" />

    <Label layoutX="50" layoutY="80" text="Titre:" />
    <TextField fx:id="titreField" layoutX="170.0" layoutY="84.0" prefWidth="300" />

    <Label layoutX="50" layoutY="130" text="Description:" />
    <TextArea fx:id="descriptionField" layoutX="170.0" layoutY="124.0" prefHeight="80" prefWidth="300" />

    <Label layoutX="52.0" layoutY="221.0" text="Salaire Min:" />
    <TextField fx:id="salaireMinField" layoutX="170.0" layoutY="225.0" prefWidth="100" />

    <Label layoutX="283.0" layoutY="221.0" text="Salaire Max:" />
    <TextField fx:id="salaireMaxField" layoutX="420.0" layoutY="225.0" prefWidth="100" />

    <Label layoutX="50" layoutY="280" text="Département (Non Modifiable):" />
    <TextField fx:id="departementField" editable="false" layoutX="345.0" layoutY="284.0" prefWidth="200" />

    <Button fx:id="updateButton" layoutX="118.0" layoutY="330.0" onAction="#update" prefHeight="44.0" prefWidth="130.0" text="Mettre à jour" />
    <Button fx:id="cancelButton" layoutX="300.0" layoutY="330.0" onAction="#cancel" prefHeight="44.0" prefWidth="130.0" text="Annuler" />

</AnchorPane>
