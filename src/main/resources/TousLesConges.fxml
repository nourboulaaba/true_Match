<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllerConge.TousLesCongesController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <TableView fx:id="congesTable" layoutX="20.0" layoutY="20.0" prefHeight="300.0" prefWidth="560.0">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="80.0" />
                <TableColumn fx:id="employeCol" text="Employé" prefWidth="100.0" />
                <TableColumn fx:id="dateDebutCol" text="Date Début" prefWidth="120.0" />
                <TableColumn fx:id="dateFinCol" text="Date Fin" prefWidth="120.0" />
                <TableColumn fx:id="typeCol" text="Type" prefWidth="80.0" />
                <TableColumn fx:id="statutCol" text="Statut" prefWidth="100.0" />
            </columns>
        </TableView>
        <Button fx:id="refreshButton" layoutX="250.0" layoutY="350.0" text="Rafraîchir" onAction="#afficherTousLesConges" />
    </children>
</AnchorPane>
