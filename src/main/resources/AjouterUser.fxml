<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane prefHeight="700.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.pitest11.Controller.gestUser.AjouterUser">
   <children>
      <!-- ScrollPane pour permettre le défilement si nécessaire -->
      <ScrollPane layoutX="10" layoutY="10" prefWidth="580.0" prefHeight="680.0">
         <content>
            <VBox spacing="15"
                  style="-fx-background-color: #FFFFFF; -fx-background-radius: 20;
                             -fx-border-radius: 20; -fx-border-color: #CCCCCC;
                             -fx-padding: 30; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);">

               <children>
                  <!-- Titre -->
                  <Text text="Ajouter un Utilisateur" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #333;" />

                  <!-- Image de profil et bouton modifier -->
                  <HBox alignment="CENTER" spacing="10">
                     <ImageView fx:id="photoImageView" fitHeight="120.0" fitWidth="120.0"
                                pickOnBounds="true" preserveRatio="true" style="-fx-background-radius: 50%;">
                        <image>
                           <Image url="@images/user.png" />
                        </image>
                     </ImageView>
                     <Button fx:id="photoButton" onAction="#uploadPhoto" style="-fx-background-color: transparent;">
                        <graphic>
                           <ImageView fitHeight="30" fitWidth="30">
                              <image>
                                 <Image url="@images/addphoto.png" />
                              </image>
                           </ImageView>
                        </graphic>
                     </Button>
                  </HBox>


                  <!-- Formulaire -->
                  <VBox spacing="10">
                     <TextField fx:id="nomField" promptText="Nom" style="-fx-font-size: 16;" prefWidth="500"/>
                     <TextField fx:id="prenomField" promptText="Prénom" style="-fx-font-size: 16;" prefWidth="500"/>
                     <TextField fx:id="identifierField" promptText="Cin" style="-fx-font-size: 16;" prefWidth="500"/>
                     <TextField fx:id="emailField" promptText="Email" style="-fx-font-size: 16;" prefWidth="500"/>
                     <PasswordField fx:id="mdpField" promptText="Mot de passe" style="-fx-font-size: 16;" prefWidth="500"/>
                     <TextField fx:id="telField" promptText="Numéro de téléphone" style="-fx-font-size: 16;" prefWidth="500"/>
                     <TextField fx:id="posteField" promptText="Poste" style="-fx-font-size: 16;" prefWidth="500"/>

                     <TextField fx:id="faceIDField" promptText="Face ID" style="-fx-font-size: 16;" prefWidth="500"/>
                     <TextField fx:id="salaireField" promptText="Salaire" style="-fx-font-size: 16;" prefWidth="500"/>

                     <!-- Champ de date avec un DatePicker -->
                     <DatePicker fx:id="dateEmbauchePicker" promptText="Date d'embauche" style="-fx-font-size: 16;" prefWidth="500"/>

                     <!-- Liste déroulante avec label "Rôle :" -->
                     <HBox spacing="10">
                        <Label text="Rôle :" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        <ComboBox fx:id="roleBox" style="-fx-font-size: 16;" prefWidth="420">
                           <items>
                              <FXCollections fx:factory="observableArrayList">
                                 <String fx:value="CANDIDAT" />
                                 <String fx:value="EMPLOYE" />
                              </FXCollections>
                           </items>
                        </ComboBox>
                     </HBox>

                     <!-- Bouton pour télécharger un CV -->
                     <HBox spacing="10">
                        <Button text="Télécharger CV" fx:id="uploadCVButton"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white;
                                               -fx-font-size: 16; -fx-background-radius: 10; -fx-padding: 10 15;"/>
                        <Label fx:id="cvLabel" text="Aucun fichier sélectionné"
                               style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                     </HBox>
                  </VBox>

                  <!-- Bouton Ajouter -->
                  <Button text="Ajouter" fx:id="ajouterButton" style="-fx-background-color: #699bf7;
                               -fx-text-fill: white; -fx-font-size: 18; -fx-background-radius: 10; -fx-padding: 10 20;" />
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>



</AnchorPane>
