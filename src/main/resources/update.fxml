<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f6f9ff;" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" >
    <children>
        <!-- Titre de la Page -->
        <Label layoutX="20.0" layoutY="20.0" text="Modifier les Informations de l'Employé" textFill="#3a1c9d">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <!-- Formulaire de Modification -->
        <VBox layoutX="20.0" layoutY="60.0" spacing="10.0">
            <children>
                <!-- Nom -->
                <Label text="Nom :" textFill="#3a1c9d">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="txtNom" promptText="Entrez le nom" prefWidth="300.0" />

                <!-- Poste -->
                <Label text="Poste :" textFill="#3a1c9d">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="txtPoste" promptText="Entrez le poste" prefWidth="300.0" />

                <!-- Département -->
                <Label text="Département :" textFill="#3a1c9d">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="txtDepartement" promptText="Entrez le département" prefWidth="300.0" />

                <!-- Salaire -->
                <Label text="Salaire :" textFill="#3a1c9d">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="txtSalaire" promptText="Entrez le salaire" prefWidth="300.0" />

                <!-- Boutons -->
                <HBox spacing="10.0">
                    <children>
                        <Button text="Enregistrer" style="-fx-background-color: #3a1c9d; -fx-text-fill: white;" />
                        <Button text="Annuler" style="-fx-background-color: #dc3545; -fx-text-fill: white;"  />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>