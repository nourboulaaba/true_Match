<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="626.0" prefWidth="669.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.pitest11.Controller.CertificatController">
    <children>
        <VBox alignment="CENTER" layoutX="28.0" prefHeight="618.0" prefWidth="618.0" spacing="10">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gestion des Certificats" />
            <ListView fx:id="listCertificats" prefHeight="200" prefWidth="600" />


            <HBox spacing="10">
                <Label text="Nom Formation:" />
                <ComboBox fx:id="cmbNomFormation" promptText="Sélectionner une formation" />


            </HBox>

            <HBox spacing="10">
                <Label text="Date Examen:" />
                <DatePicker fx:id="dateExamen" prefHeight="0.0">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin></DatePicker>
            </HBox>

            <HBox spacing="10">
                <Label text="Heure:" />
                <ComboBox fx:id="cmbHeure" promptText="Sélectionner une heure">
               <HBox.margin>
                  <Insets left="37.0" />
               </HBox.margin></ComboBox>
            </HBox>

            <HBox spacing="10">
                <Label text="Durée (min):" />
                <Spinner fx:id="spnDuree" />
            </HBox>

            <HBox spacing="10">
                <Label text="Prix Examen:" />
                <TextField fx:id="txtPrixExam" promptText="Saisir le prix en DT" />
            </HBox>

            <HBox spacing="10">
                <Label text="Niveau:" />
                <ComboBox fx:id="cmbNiveau" promptText="Sélectionner un niveau" />
            </HBox>

            <HBox spacing="10">
                <Button fx:id="btnAjouter" onAction="#ajouterCertificat" text="Ajouter" />
                <Button fx:id="btnModifier" onAction="#modifierCertificat" text="Modifier" />
                <Button fx:id="btnSupprimer" onAction="#supprimerCertificat" text="Supprimer" />
            </HBox>
            <!-- Zone pour afficher le message de résultat -->
            <HBox spacing="10">
                <Label fx:id="lblResultat" text="Résultat de l'examen : " />
            </HBox>

            <!-- Bouton pour télécharger le certificat -->
            <HBox spacing="10">
                <Button fx:id="btnTelecharger" onAction="#telechargerCertificat" text="Télécharger Certificat" />
            </HBox>

            <!-- Zone pour gérer la reprogrammation -->
            <HBox prefHeight="20.0" prefWidth="618.0" spacing="10">
            <children>
                   <Button fx:id="btnReprogrammer" onAction="#reprogrammerExamen" text="Reprogrammer Examen" />
            </children>
            </HBox>
         <HBox layoutX="10.0" layoutY="588.0" prefHeight="20.0" prefWidth="618.0" spacing="10" />
         <HBox layoutX="10.0" layoutY="609.0" prefHeight="20.0" prefWidth="618.0" spacing="10" />
         <HBox layoutX="10.0" layoutY="619.0" prefHeight="20.0" prefWidth="618.0" spacing="10" />

        </VBox>
    </children>
</AnchorPane>
