<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CertificatController">
    <children>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Gestion des Certificats" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <ListView fx:id="listCertificats" prefHeight="200" prefWidth="600" />


            <HBox spacing="10">
                <Label text="nom Formation:" />
                <ComboBox fx:id="cmbNomFormation" promptText="Sélectionner une formation" />


            </HBox>

            <HBox spacing="10">
                <Label text="Date Examen:" />
                <DatePicker fx:id="dateExamen" />
            </HBox>

            <HBox spacing="10">
                <Label text="Heure:" />
                <ComboBox fx:id="cmbHeure" promptText="Sélectionner une heure" />
            </HBox>

            <HBox spacing="10">
                <Label text="Durée (min):" />
                <Spinner fx:id="spnDuree" />
            </HBox>

            <HBox spacing="10">
                <Label text="Prix Examen:" />
                <TextField fx:id="txtPrixExam" promptText="Saisir le prix en DT" />
            </HBox>

            <HBox spacing="10">
                <Label text="Niveau:" />
                <ComboBox fx:id="cmbNiveau" promptText="Sélectionner un niveau" />
            </HBox>

            <HBox spacing="10">
                <Button fx:id="btnAjouter" text="Ajouter" onAction="#ajouterCertificat" />
                <Button fx:id="btnModifier" text="Modifier" onAction="#modifierCertificat" />
                <Button fx:id="btnSupprimer" text="Supprimer" onAction="#supprimerCertificat" />
            </HBox>
            <!-- Zone pour afficher le message de résultat -->
            <HBox spacing="10">
                <Label fx:id="lblResultat" text="Résultat de l'examen : " />
            </HBox>

            <!-- Bouton pour télécharger le certificat -->
            <HBox spacing="10">
                <Button fx:id="btnTelecharger" text="Télécharger Certificat" onAction="#telechargerCertificat" />
            </HBox>

            <!-- Zone pour gérer la reprogrammation -->
            <HBox spacing="10">
                <Button fx:id="btnReprogrammer" text="Reprogrammer Examen" onAction="#reprogrammerExamen" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
